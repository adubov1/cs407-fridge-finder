<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/recipe_background"
            android:padding="10dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/back_arrow"
                android:background="@drawable/back_circle"
                android:contentDescription="Back" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#CDCEFF"
            android:padding="8dp">

            <!-- Menu Button -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            <!--android:src="@drawable/ic_menu" <!-- Replace with your menu icon -->
            <!--android:background="@android:color/transparent"
            <!--android:contentDescription="Menu" -->/>

            <!-- All Filters Button -->
            <Button
                android:id="@+id/allFiltersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Filters"
                android:backgroundTint="#5D467A"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp" />

            <!-- See/Add Ingredients Button -->
            <Button
                android:id="@+id/seeAddIngredientsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See/Add Ingredients"
                android:backgroundTint="#5D467A"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>